<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.connection.isolation">2</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.enable_lazy_load_no_trans">true</property>
    <property name="hibernate.connection.provider_class">org.hibernate.c3p0.internal.C3P0ConnectionProvider</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bdshorarios?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="c3p0.autoCommitOnClose">true</property>
    <property name="c3p0.acquire_increment">1</property>
    <property name="c3p0.initialPoolSize">5</property>
    <property name="c3p0.idle_test_period">100</property>
    <property name="hibernate.show_sql">true</property>
    <property name="c3p0.max_size">50</property>
    <property name="c3p0.max_statements">0</property>
    <property name="c3p0.min_size">5</property>
    <property name="c3p0.timeout">100</property>    
    <mapping class="mx.dreamcatchersoftware.entidad.Asignatura"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Carrera"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Dia"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Edificio"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Grupo"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Maestro"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Rela1"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Rela2"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Rela3"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Rela4"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Sala"/>
    <mapping class="mx.dreamcatchersoftware.entidad.Subgrupo"/>
  </session-factory>
</hibernate-configuration>
